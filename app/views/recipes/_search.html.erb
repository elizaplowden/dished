<%= form_tag recipes_path, method: :get do %>
  <%= text_field_tag  :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for ingredients"
  %>
  <!-- implementing a select tag of all foods for the search -->
  <%= select_tag "ingredient", options_from_collection_for_select(foods, :id, :name), class: 'select2' %>
