<%= simple_form_for "search", url: recipes_path, html: { id: "search-bar-form" }, method: :get  do |f| %>
  <%= f.input :query, collection: foods.pluck(:name), label: false,
              input_html: { class: 'select2',
                            multiple: true,
                            id: "search-box",
                            style: "width: 700px;" } %>
  <%= f.button :button, id: "search_button" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
