<% button_id = current_page?("/") ? 'search_button_home' : 'search_button_navbar'  %>
<%= simple_form_for "search", url: recipes_path, html: { id: "search-bar-form" }, method: :get  do |f| %>
  <%= f.input :query,
              collection: foods.pluck(:name),
              label: false,
              selected: search_terms,
              input_html: { class: 'select2',
                            multiple: true,
                            autofocus: true,
                            id: "search-box",
                            style: "width: 800px;" } %>
  <%= f.button :button, id: button_id do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
