<div class="user-image-uploads col-12">
  <h3>Pictures</h3>
  <hr>
    <% if recipe.images.attached? %>
      <% recipe.images.each do |image| %>
        <%= cl_image_tag image.key, height: 150, width: 150, crop: :fill %>
      <% end %>
    <% end %>
    <p>Add to gallery</p>
    <%= simple_form_for recipe, method: :patch, url: upload_recipe_path do |f| %>
      <!-- to add one or mutliple images to a recipe -->
      <%= f.input :images, as: :file, label: false, input_html: { class: 'd-none', multiple: true }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
      <%= f.submit "Save", class: "button" %>
    <% end %>
</div>



