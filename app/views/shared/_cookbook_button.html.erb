<% if recipe.bookmarks.pluck(:user_id).include?(current_user.id) %>
  <%= link_to bookmark_path(recipe.bookmarks.find_by(:user_id == current_user.id).id), method: :delete, data: { confirm: 'Are you sure? This will remove all of your recipe notes too.' }, class: 'cookbook-button-saved' do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to recipe_bookmarks_path(recipe), method: :post, class: 'cookbook-button-save' do %>
    <i class="far fa-bookmark"></i>
  <% end %>
<% end %>
