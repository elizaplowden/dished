
 <% if @user.follows_given.empty? %>
    <button><b>0</b> Followers</button>
  <% else %>

  <button data-toggle="modal" data-target="#exampleModalLong">
    <b><%= @user.follows_given.count%></b> Following
  </button>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"  id="follow-modal">
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLongTitle">Following</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
              <div class="modal-body">
              <% @user.follows_given.each do |following| %>
              <div class="modal-info">
                        <% if following.followee.avatar.attached? %>
                 <%=cl_image_tag following.followee.avatar.key, class: "avatar-large", crop: :fill  %>
              <% else %>
                <%= image_tag 'yellow.png', class: "avatar-large", crop: :fill %>
              <% end %>
              <%= link_to following.followee.username, user_path(following.followee.id) %>
              </div>
              <% end %>
              </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

  <% end %>
