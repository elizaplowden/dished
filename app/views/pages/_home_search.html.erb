
<!-- search form that appears on the home page only -->
<%= simple_form_for "search", url: recipes_path, html: { class: 'form-inline search-bar' }, method: :get  do |f| %>
  <%= f.input :query, collection: foods.pluck(:name), label: false, input_html: { class: 'select2', multiple: true }, wrapper_html: { id: "home-search-box" } %>
  <%= f.submit "Search", class: "button" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
